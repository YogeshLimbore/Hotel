<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - hotel</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/hotel.styles.css" asp-append-version="true" />
    <link href="~/css/layout.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    @await RenderSectionAsync("CustomCSS", required: false)
</head>
<div class="container">
<body>
    <header>
        <div id="Navbar">
            <div class="logo">
                <img id="logo" src="/images/logo.png" alt="Restaurant Logo">
            </div>
            <a id="BName">Hotel Yogesh & Bar</a>
            <a asp-area="" asp-controller="Home" asp-action="index" style="margin-left: 110px;">Home</a>
            
            <a asp-area="" asp-controller="Home" asp-action="Services">Services</a>
            <a asp-area="" asp-controller="Home" asp-action="Menu">Menu</a>
            <a asp-area="" asp-controller="LoginD" asp-action="Login">Login</a>
            <a asp-area="" asp-controller="Home" asp-action="Contactus">Contact us</a>
            <a id="im" asp-area="" asp-controller="Home" asp-action="Cart"><img src="/images/Cart.png" style="margin-left: 50px;" ></a>
            <a id="im" asp-area="" asp-controller="Home" asp-action="Account"><img src="/images/Profile.png" ></a>
            <a id="im" asp-area="" asp-controller="Home" asp-action="Search"><img src="/images/search.png" ></a>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        Made with &hearts; by Yogesh <br>
        &#169; 2016-2024, Yogeshhotel.com, Inc
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/layout.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("CustomJs", required: false)

    
</body>
</div>


</html>
