@{
    ViewData["Title"] = "Create New Account";
}


@section CustomCSS {
    <link href="~/css/Clogin.css" rel="stylesheet" />
}

<body id="bodys">

    <form action="/action_page.php">
        <div class="container1">
            <h1 id="head">Create Account</h1>
            
            <hr>

            <label for="email"><b>Email</b></label>
            <input type="text" id="UserN" placeholder="Enter Email" name="email" required>

            <label for="psw"><b>Password</b></label>
            <input type="password" id="Pass" placeholder="Enter Password" name="psw" required>

            <label for="psw-repeat"><b>Repeat Password</b></label>
            <input type="password" id="rePass" placeholder="Repeat Password" name="psw-repeat" required>

            <label>
                <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Remember me
            </label>

            <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>

            <div class="clearfix">
                <button id="but" type="button" class="cancelbtn">Cancel</button>
                <button id="but" type="submit" class="signupbtn">Sign Up</button>
            </div>
        </div>
    </form>

</body>

@section CustomJs
{
    <script src="~/js/Clogin.js"></script>
}
